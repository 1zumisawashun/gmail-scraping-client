{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "./node_modules/gts",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["prettier"],
  "rules": {
    // eslint-config-airbnb（eslint)
    "spaced-comment": "off",
    "no-console": "off",
    "no-alert": "off",
    "arrow-body-style": "off",
    "no-unreachable-loop": "off",
    // eslint-config-airbnb（eslint-plugin-import)
    "import/prefer-default-export": "off",
    "import/extensions": "off", // NOTE:eslint-config-airbnb-typescriptで設定しているのになんでだ？
    // eslint-config-airbnb-typescript（eslint-typescript）
    "@typescript-eslint/naming-convention": "off",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-expressions": [
      "error",
      { "allowTernary": true }
    ],
    "@typescript-eslint/no-unused-vars": "off"
  },
  "ignorePatterns": ["template/**/*"]
}
